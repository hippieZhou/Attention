<Grid
    x:Class="Attention.ExtendedSplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:local="using:Attention"
    xmlns:lottie="using:Microsoft.Toolkit.Uwp.UI.Lottie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    d:DesignHeight="768"
    d:DesignWidth="1366"
    mc:Ignorable="d">
    <Grid.Background>
        <SolidColorBrush Color="{ThemeResource SystemAccentColor}" />
    </Grid.Background>
    <i:Interaction.Behaviors>
        <ic:EventTriggerBehavior EventName="Loaded">
            <ic:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </ic:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition Height="180" />
    </Grid.RowDefinitions>

    <Canvas Grid.Row="0" Grid.RowSpan="2">
        <Image x:Name="extendedSplashImage" Source="ms-appx:///Assets/SplashScreen.png" />
    </Canvas>
    <muxc:AnimatedVisualPlayer
        Grid.Row="1"
        Width="240"
        HorizontalAlignment="Center">
        <lottie:LottieVisualSource UriSource="ms-appx:///Assets/loading-animation.json" />
    </muxc:AnimatedVisualPlayer>
</Grid>
