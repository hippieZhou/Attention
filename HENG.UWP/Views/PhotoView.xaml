<UserControl
    x:Class="HENG.UWP.Views.PhotoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HENG.UWP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:HENG.UWP.UserControls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <uc:PhotoGridView ViewModel="{x:Bind ViewModel.PhotoGirdViewModel, Mode=OneWay}" />
        <uc:PhotoItemView ViewModel="{x:Bind ViewModel.PhotoItemViewModel, Mode=OneWay}" />
        <uc:PhotoSearchView ViewModel="{x:Bind ViewModel.PhotoSearchViewModel, Mode=OneWay}" />
    </Grid>
</UserControl>
