<UserControl
    x:Class="HENG.App.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HENG.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:HENG.App.UserControls"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <Grid>
        <animations:Implicit.ShowAnimations>
            <animations:TranslationAnimation
                From="0, 100, 0"
                To="0"
                Duration="0:0:1" />
            <animations:OpacityAnimation
                From="0"
                To="1.0"
                Duration="0:0:1" />
        </animations:Implicit.ShowAnimations>
        <uc:PhotoMasterControl x:Name="masterView" ViewModel="{x:Bind ViewModel.PhotoGridViewModel, Mode=OneWay}" />
        <uc:PhotoDetailControl
            x:Name="detailView"
            x:DeferLoadStrategy="Lazy"
            ViewModel="{x:Bind ViewModel.PhotoGridViewModel, Mode=OneWay}"
            Visibility="Collapsed" />
        <uc:SearchControl
            x:Name="searchView"
            Margin="0,-62,0,0"
            ViewModel="{x:Bind ViewModel.PhotoGridViewModel, Mode=OneWay}"
            Visibility="Collapsed" />
    </Grid>
</UserControl>
