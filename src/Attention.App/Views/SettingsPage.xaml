<prismMvvm:SessionStateAwarePage
    x:Class="Attention.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:local="using:Attention.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mtuc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <prismMvvm:SessionStateAwarePage.Resources>
        <Style x:Key="SocialPathStyle" TargetType="Path">
            <Setter Property="Fill" Value="{ThemeResource ButtonForegroundThemeBrush}" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1" />
                    </TransformGroup>
                </Setter.Value>
            </Setter>
        </Style>
    </prismMvvm:SessionStateAwarePage.Resources>

    <Grid>
        <i:Interaction.Behaviors>
            <ic:EventTriggerBehavior EventName="Loaded">
                <ic:InvokeCommandAction Command="{x:Bind ConcreteDataContext.LoadCommand, Mode=OneWay}" />
            </ic:EventTriggerBehavior>
        </i:Interaction.Behaviors>
        <ScrollViewer>
            <StackPanel Margin="12,12,0,12" Spacing="24">
                <muxc:RadioButtons>
                    <muxc:RadioButtons.Header>
                        <TextBlock x:Uid="settings_ThemeMode" Style="{ThemeResource TitleTextBlockStyle}" />
                    </muxc:RadioButtons.Header>
                    <RadioButton
                        x:Uid="settings_ThemeMode_Light"
                        Command="{x:Bind ConcreteDataContext.ChangeThemeCommand, Mode=OneWay}"
                        GroupName="Theme"
                        IsChecked="{Binding Source={StaticResource AppSettings}, Path=Theme, Converter={StaticResource ObjectEqualToCheckedConverter}, ConverterParameter=Light}">
                        <RadioButton.CommandParameter>
                            <ElementTheme>Light</ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                    <RadioButton
                        x:Uid="settings_ThemeMode_Dark"
                        Command="{x:Bind ConcreteDataContext.ChangeThemeCommand, Mode=OneWay}"
                        GroupName="Theme"
                        IsChecked="{Binding Source={StaticResource AppSettings}, Path=Theme, Converter={StaticResource ObjectEqualToCheckedConverter}, ConverterParameter=Dark}">
                        <RadioButton.CommandParameter>
                            <ElementTheme>Dark</ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                    <RadioButton
                        x:Uid="settings_ThemeMode_System"
                        Command="{x:Bind ConcreteDataContext.ChangeThemeCommand, Mode=OneWay}"
                        GroupName="Theme"
                        IsChecked="{Binding Source={StaticResource AppSettings}, Path=Theme, Converter={StaticResource ObjectEqualToCheckedConverter}, ConverterParameter=Default}">
                        <RadioButton.CommandParameter>
                            <ElementTheme>Default</ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                </muxc:RadioButtons>
                <muxc:RadioButtons>
                    <muxc:RadioButtons.Header>
                        <TextBlock x:Uid="settings_Language" Style="{ThemeResource TitleTextBlockStyle}" />
                    </muxc:RadioButtons.Header>
                    <RadioButton
                        x:Uid="settings_Language_Zh"
                        Command="{x:Bind ConcreteDataContext.ChangeLanguageCommand, Mode=OneWay}"
                        CommandParameter="zh-CN"
                        GroupName="Language"
                        IsChecked="{Binding Source={StaticResource AppSettings}, Path=Language, Converter={StaticResource ObjectEqualToCheckedConverter}, ConverterParameter=zh-CN}" />
                    <RadioButton
                        x:Uid="settings_Language_En"
                        Command="{x:Bind ConcreteDataContext.ChangeLanguageCommand, Mode=OneWay}"
                        CommandParameter="en-US"
                        GroupName="Language"
                        IsChecked="{Binding Source={StaticResource AppSettings}, Path=Language, Converter={StaticResource ObjectEqualToCheckedConverter}, ConverterParameter=en-US}" />
                </muxc:RadioButtons>
                <mtuc:HeaderedContentControl>
                    <mtuc:HeaderedContentControl.Header>
                        <TextBlock x:Uid="settings_About" Style="{ThemeResource TitleTextBlockStyle}" />
                    </mtuc:HeaderedContentControl.Header>
                    <mtuc:HeaderedContentControl.Content>
                        <TextBlock Text="AAA" />
                    </mtuc:HeaderedContentControl.Content>
                </mtuc:HeaderedContentControl>
                <mtuc:HeaderedContentControl>
                    <mtuc:HeaderedContentControl.Header>
                        <TextBlock x:Uid="settings_dp" Style="{ThemeResource TitleTextBlockStyle}" />
                    </mtuc:HeaderedContentControl.Header>
                    <mtuc:HeaderedContentControl.Content>
                        <mtuc:MarkdownTextBlock
                            Background="Transparent"
                            SchemeList="companyportal,randomscheme"
                            Text="{x:Bind ConcreteDataContext.Dependencies, Mode=OneWay}"
                            UriPrefix="ms-appx://" />
                    </mtuc:HeaderedContentControl.Content>
                </mtuc:HeaderedContentControl>
                <mtuc:HeaderedContentControl>
                    <mtuc:HeaderedContentControl.Header>
                        <TextBlock x:Uid="settings_Contract" Style="{ThemeResource TitleTextBlockStyle}" />
