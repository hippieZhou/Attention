<prismUnity:PrismUnityApplication
    x:Class="Attention.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:converter="using:Attention.App.Converters"
    xmlns:local="using:Attention.App"
    xmlns:model="using:Attention.App.Models"
    xmlns:prismUnity="using:Prism.Unity.Windows">
    <prismUnity:PrismUnityApplication.Resources>
        <ResourceDictionary>
            <model:AppSettings x:Key="AppSettings" />
            <x:Double x:Key="CompactModeThresholdWidth">641</x:Double>
            <x:Double x:Key="ExpandedModeThresholdWidth">1008</x:Double>
            <converter:ImageSourceNullValueConverter x:Key="ImageSourceNullValueConverter" />
            <converter:ObjectEqualToCheckedConverter x:Key="ObjectEqualToCheckedConverter" />

            <animations:AnimationCollection x:Key="DefaultShowAnimations">
                <animations:TranslationAnimation
                    From="600, 0, 0"
                    To="0"
                    Duration="0:0:0.600" />
                <animations:OpacityAnimation
                    From="0"
                    To="1.0"
                    Duration="0:0:0.200" />
            </animations:AnimationCollection>

            <animations:AnimationCollection x:Key="DefaultHideAnimations">
                <animations:TranslationAnimation
                    From="0"
                    To="600, 0, 0"
                    Duration="0:0:0.600" />
                <animations:OpacityAnimation
                    From="1.0"
                    To="0"
                    Duration="0:0:0.200" />
            </animations:AnimationCollection>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <AcrylicBrush
                        x:Key="BackdropAcrylicBrush"
                        BackgroundSource="Backdrop"
                        FallbackColor="#FF484848"
                        TintColor="#88484848"
                        TintOpacity="0.4" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="Default">
                    <AcrylicBrush
                        x:Key="BackdropAcrylicBrush"
                        BackgroundSource="Backdrop"
                        FallbackColor="#FF484848"
                        TintColor="#88484848"
                        TintOpacity="0.4" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--  Other merged dictionaries here  -->
                <ResourceDictionary Source="/Themes/AutoSuggestBox.xaml" />
                <ResourceDictionary Source="/Themes/Button.xaml" />
                <ResourceDictionary Source="/Themes/GridViewItem.xaml" />
                <ResourceDictionary Source="/Themes/ScrollViewer.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </prismUnity:PrismUnityApplication.Resources>
</prismUnity:PrismUnityApplication>
