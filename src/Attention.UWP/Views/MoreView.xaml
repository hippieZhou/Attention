<UserControl
    x:Class="Attention.UWP.Views.MoreView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:converrter="using:Attention.UWP.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:local="using:Attention.UWP.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:Attention.UWP.Models"
    xmlns:mtui="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:xaml="using:Windows.UI.Xaml"
    d:DesignHeight="768"
    d:DesignWidth="1024"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <ic:EventTriggerBehavior EventName="Loaded">
            <ic:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </ic:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Grid
        animations:Implicit.HideAnimations="{StaticResource DefaultHideAnimations}"
        animations:Implicit.ShowAnimations="{StaticResource DefaultShowAnimations}"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        CornerRadius="24,24,0,0"
        Visibility="{x:Bind ViewModel.Visibility, Mode=OneWay}">
        <Grid.RowDefinitions>
            <RowDefinition Height="72" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock
                x:Uid="more_Header"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Style="{ThemeResource TitleTextBlockStyle}" />
            <Button
                Margin="0,0,16,0"
                HorizontalAlignment="Right"
                Background="Transparent"
                Command="{x:Bind ViewModel.BackCommand}">
                <FontIcon
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Glyph="&#xE894;" />
            </Button>
            <NavigationViewItemSeparator VerticalAlignment="Bottom" />
        </Grid>
        <Pivot Grid.Row="1">
            <Pivot.Resources>
                <Style TargetType="PivotItem">
                    <Setter Property="Padding" Value="12" />
                </Style>
            </Pivot.Resources>
            <PivotItem Header="个性化">
                <StackPanel MaxWidth="600" Spacing="12">
                    <ComboBox
                        HorizontalAlignment="Stretch"
                        Header="主题"
                        SelectedIndex="{Binding Source={StaticResource AppSettings}, Path=Theme, Mode=TwoWay}">
                        <ComboBoxItem Content="Default">
                            <ComboBoxItem.DataContext>
                                <xaml:ElementTheme>Default</xaml:ElementTheme>
                            </ComboBoxItem.DataContext>
                        </ComboBoxItem>
                        <ComboBoxItem Content="Light">
                            <ComboBoxItem.DataContext>
                                <xaml:ElementTheme>Light</xaml:ElementTheme>
                            </ComboBoxItem.DataContext>
                        </ComboBoxItem>
                        <ComboBoxItem Content="Dark">
                            <ComboBoxItem.DataContext>
                                <xaml:ElementTheme>Dark</xaml:ElementTheme>
                            </ComboBoxItem.DataContext>
                        </ComboBoxItem>
                    </ComboBox>
                    <ComboBox
                        HorizontalAlignment="Stretch"
                        Header="语言"
                        SelectedIndex="{Binding Source={StaticResource AppSettings}, Path=Language, Mode=TwoWay}">
                        <ComboBoxItem Content="Chinese" />
                        <ComboBoxItem Content="English" />
                    </ComboBox>
                    <ComboBox
                        HorizontalAlignment="Stretch"
                        Header="标头风格"
                        SelectedIndex="{Binding Source={StaticResource AppSettings}, Path=HeaderMode, Mode=TwoWay}">
                        <ComboBoxItem Content="None" />
                        <ComboBoxItem Content="QuickReturn" />
                        <ComboBoxItem Content="Sticky" />
                        <ComboBoxItem Content="Fade" />
                    </ComboBox>
                    <mtui:HeaderedContentControl HorizontalContentAlignment="Stretch" Header="下载路径">
                        <Button
                            Height="32"
                            Margin="0,4"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.OpenSavingFolderCommand}"
                            Content="GET IT" />
                    </mtui:HeaderedContentControl>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="Thanks">
                <mtui:MarkdownTextBlock
                    Background="Transparent"
                    SchemeList="companyportal,randomscheme"
                    Text="{x:Bind ViewModel.Markdown, Mode=OneWay}"
                    UriPrefix="ms-appx://" />
            </PivotItem>
            <PivotItem Header="About">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="0,48,0,0"
                        HorizontalAlignment="Center"
                        Style="{ThemeResource HeaderTextBlockStyle}"
                        Text="{Binding Source={StaticResource AppSettings}, Path=Name, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Text="{Binding Source={StaticResource AppSettings}, Path=Version, Mode=OneWay}" />
                    <StackPanel Grid.Row="2">
                        <Border
                            Width="80"
                            Height="2"
                            Margin="12"
                            Background="{ThemeResource SystemAccentColor}" />
