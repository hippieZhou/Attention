<UserControl
    x:Class="HENG.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HENG.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:HENG.UserControls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <uc:PhotoControl ViewModel="{x:Bind ViewModel.Photo, Mode=OneWay}">
            <uc:PhotoControl.Header>
                <uc:HeaderControl
                    Margin="0,0,6,0"
                    HeaderMode="{x:Bind ViewModel.HeaderMode, Mode=OneWay}"
                    ItemInvokedCommand="{x:Bind ViewModel.ItemInvokedCommand, Mode=OneWay}"
                    RefreshCommand="{x:Bind ViewModel.RefreshCommand, Mode=OneWay}"
                    SearchCommand="{x:Bind ViewModel.SearchCommand, Mode=OneWay}" />
            </uc:PhotoControl.Header>
        </uc:PhotoControl>
        <uc:PhotoInfoControl ViewModel="{x:Bind ViewModel.PhotoInfo, Mode=OneWay}" />
    </Grid>
</UserControl>
