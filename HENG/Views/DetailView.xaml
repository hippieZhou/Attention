<Page
    x:Class="HENG.Views.DetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:HENG.Helpers"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:HENG.Models"
    Background="{ThemeResource PrimaryPageBackground}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="BingTemplate" x:DataType="models:BingItem">
            <Grid>
                <controls:ImageEx
                    CacheMode="BitmapCache"
                    IsCacheEnabled="True"
                    PlaceholderSource="ms-appx:///Assets/ImageExPlaceholder.png"
                    PlaceholderStretch="None"
                    Source="{x:Bind Url}"
                    Stretch="UniformToFill"
                    UseLayoutRounding="True" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="PicsumTemplate" x:DataType="models:PicsumItem">
            <Grid>
                <controls:ImageEx
                    CacheMode="BitmapCache"
                    IsCacheEnabled="True"
                    PlaceholderSource="ms-appx:///Assets/ImageExPlaceholder.png"
                    PlaceholderStretch="None"
                    Source="{x:Bind Download_url}"
                    Stretch="UniformToFill"
                    UseLayoutRounding="True" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="PaperTemplate" x:DataType="models:PaperItem">
            <Grid>
                <Grid.Background>
                    <AcrylicBrush
                        BackgroundSource="Backdrop"
                        FallbackColor="{x:Bind Color}"
                        Opacity="0.6"
                        TintColor="{x:Bind Color}" />
                </Grid.Background>
                <controls:ImageEx
                    CacheMode="BitmapCache"
                    IsCacheEnabled="True"
                    PlaceholderSource="ms-appx:///Assets/ImageExPlaceholder.png"
                    Source="{x:Bind Urls.Full}"
                    Stretch="UniformToFill"
                    UseLayoutRounding="True" />
            </Grid>
        </DataTemplate>

        <helpers:ExDataTemplateSelector
            x:Key="ExDataTemplateSelector"
            BingTemplate="{StaticResource BingTemplate}"
            PaperTemplate="{StaticResource PaperTemplate}"
            PicsumTemplate="{StaticResource PicsumTemplate}" />
    </Page.Resources>

    <Grid>
        <controls:ImageEx
            CacheMode="BitmapCache"
            IsCacheEnabled="True"
            PlaceholderSource="ms-appx:///Assets/ImageExPlaceholder.png"
            PlaceholderStretch="None"
            Source="{Binding Bitmap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Stretch="UniformToFill"
            UseLayoutRounding="True" />
        <controls:DropShadowPanel
            Margin="0,0,0,24"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            BlurRadius="20"
            OffsetY="1"
            Opacity="1"
            ShadowOpacity="1"
            Color="Black">
            <StackPanel
                Padding="24,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{ThemeResource NavigationViewExpandedPaneBackground}"
                CornerRadius="6"
                Orientation="Horizontal">
                <Button Command="{x:Bind BackCommand}" Style="{StaticResource DefaultButtonRevealStyle}">
                    <Button.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE845;" />
                    </Button.Content>
                </Button>
                <Button Command="{x:Bind ViewModel.DownloadCommand}" Style="{StaticResource DefaultButtonRevealStyle}">
                    <Button.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE896;" />
                    </Button.Content>
                </Button>
                <Button Command="{x:Bind ViewModel.ShareCommand}" Style="{StaticResource DefaultButtonRevealStyle}">
                    <Button.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72D;" />
                    </Button.Content>
                </Button>
                <Button Command="{x:Bind ViewModel.RefreshCommand}" Style="{StaticResource DefaultButtonRevealStyle}">
                    <Button.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE895;" />
                    </Button.Content>
                </Button>
            </StackPanel>
        </controls:DropShadowPanel>
    </Grid>
</Page>
